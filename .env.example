# Database Configuration
# PostgreSQL connection string for GCP Cloud SQL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# For local development with Cloud SQL Proxy:
DATABASE_URL=postgresql://ppagents_user:password@localhost:5432/ppagents
# For production (use Cloud SQL connection):
# DATABASE_URL=postgresql://ppagents_user:password@/ppagents?host=/cloudsql/PROJECT_ID:REGION:INSTANCE_NAME

# Direct URL for migrations (same as DATABASE_URL typically)
DIRECT_URL=${DATABASE_URL}

# NextAuth Configuration
# Base URL of your application
NEXTAUTH_URL=http://localhost:3000
# Secret for encrypting JWT tokens (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl-rand-base64-32

# SSO Provider Configuration
# Choose ONE of the following SSO providers and configure accordingly:

# Option 1: SAML 2.0 Provider (Enterprise SSO)
SSO_SAML_ISSUER=https://your-idp.com/saml
SSO_SAML_ENTRY_POINT=https://your-idp.com/saml/login
SSO_SAML_CERT=-----BEGIN CERTIFICATE-----...-----END CERTIFICATE-----

# Option 2: OIDC Provider (OAuth-based SSO)
SSO_OIDC_CLIENT_ID=your-oidc-client-id
SSO_OIDC_CLIENT_SECRET=your-oidc-client-secret
SSO_OIDC_ISSUER=https://your-idp.com

# Option 3: Azure AD
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-tenant-id

# Option 4: Google Workspace
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_HD=your-company-domain.com

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1

# Google Cloud Storage
GCP_STORAGE_BUCKET=ppagents-files-production
# Path to service account JSON (for local development)
GOOGLE_APPLICATION_CREDENTIALS=./gcp-service-account.json
# Or use base64-encoded service account (for deployment)
GCP_SERVICE_ACCOUNT_KEY_BASE64=base64-encoded-service-account-json

# MCP Server Configuration
MCP_SERVER_PORT=3001
MCP_AUTH_SECRET=your-mcp-auth-secret-generate-with-openssl-rand-base64-32
# Enable MCP server (set to false to disable)
ENABLE_MCP_SERVER=true

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=PPAgents
NEXT_PUBLIC_COMPANY_NAME=Your Company Name

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_COMMENTS=true
NEXT_PUBLIC_ENABLE_RATINGS=true

# Upstash Redis (Required for Production Rate Limiting)
# Get credentials from https://console.upstash.com
# Used for distributed rate limiting across serverless functions
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# Sentry Error Tracking (Optional but Recommended)
# Get DSN from https://sentry.io
# Used for error monitoring and performance tracking
NEXT_PUBLIC_SENTRY_DSN=https://your-key@sentry.io/project-id

# Development Features
# WARNING: Set to false in production
NODE_ENV=development
ENABLE_DEBUG_PANEL=true
